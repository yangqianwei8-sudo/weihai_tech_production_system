/* ===== 两栏布局样式 ===== */
/* 风格：简洁、美观、大方，灰色黑色为主，卡片直角 */

/* 布局容器 */
.two-column-layout {
  display: flex !important;
  flex-direction: row !important; /* 明确指定横向布局 */
  align-items: flex-start !important; /* 子元素从顶部对齐 */
  position: relative !important; /* 确保定位上下文正确 */
  min-height: calc(100vh - 62px) !important; /* 修复：减去顶部栏实际高度 62px */
  height: calc(100vh - 62px) !important; /* 确保高度正确计算，填满可用空间 */
  margin-top: 62px !important; /* 从导航栏下方开始，避免与导航栏重叠 */
  padding-top: 0 !important; /* 确保没有额外的 padding */
  overflow: hidden !important; /* 防止多余的滚动条 */
}

/* 确保侧边栏（position: fixed）不影响 flex 布局 */
/* 注意：侧边栏使用 position: fixed，所以不会占用 flex 空间，但需要保持可见 */
.two-column-layout > .vh-sb,
.two-column-layout > aside.vh-sb {
  flex: 0 0 0 !important; /* 不占用 flex 空间 */
  /* 不设置 width: 0，保持侧边栏可见 */
  /* 侧边栏使用 position: fixed，所以不会影响 flex 布局 */
}

/* 确保 .two-col-main 正确显示在 flex 容器中 */
.two-column-layout > .two-col-main {
  flex: 1 1 auto !important;
  order: 2 !important; /* 确保在主内容位置 */
  visibility: visible !important;
  display: flex !important;
}

/* ===== 左侧栏 ===== */
.two-col-sidebar {
  width: var(--sidebar-width, 224px);
  flex: 0 0 var(--sidebar-width, 224px);
  position: fixed;
  top: 62px !important; /* 使用导航栏实际高度 62px */
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  border-right: 1px solid #E0E0E0;
  box-shadow: 1px 0 2px rgba(0, 0, 0, 0.05);
  overflow-y: auto;
  overflow-x: hidden;
  z-index: 1020;
}

.two-col-sidebar__inner {
  padding: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.two-col-sidebar__placeholder {
  padding: 20px;
  text-align: center;
  color: #999999;
  font-size: 14px;
}

/* ===== 右侧主内容区 ===== */
.two-col-main {
  flex: 1 1 auto !important;
  position: static !important; /* 使用 static 定位，避免任何定位问题 */
  margin-left: calc(var(--sidebar-width, 224px) + 8px) !important;
  min-height: calc(100vh - 62px) !important; /* 修复：减去顶部栏实际高度 62px */
  height: calc(100vh - 62px) !important; /* 确保高度正确计算，填满可用空间 */
  background: #F5F5F5;
  overflow-x: hidden !important;
  overflow-y: auto !important; /* 允许内容滚动，使用 !important 确保不被其他 CSS 覆盖 */
  max-height: none !important;
  margin-top: 0 !important;
  padding-top: 0 !important;
  top: auto !important; /* 确保没有 top 定位 */
  left: auto !important; /* 确保没有意外的 left 定位 */
  right: auto !important; /* 确保没有意外的 right 定位 */
  bottom: auto !important; /* 确保没有 bottom 定位 */
  transform: none !important; /* 确保没有 transform 影响位置 */
  display: flex !important; /* 确保使用 flex 布局，使用 !important 确保不被其他 CSS 覆盖 */
  flex-direction: column !important; /* 垂直方向布局 */
  align-self: flex-start !important; /* 确保在 flex 容器中从顶部开始 */
  order: 1 !important; /* 确保顺序正确 */
}

.two-col-content {
  padding: 8px 8px 24px 8px;
  /* 修复：使用具体的min-height值，确保容器高度足够包含内容 */
  min-height: calc(100vh - 62px - 16px) !important; /* 视口高度 - 顶部栏实际高度 62px - padding总和 */
  flex: 1 1 auto !important; /* 确保在 flex 容器中正确填充空间 */
  overflow: visible !important; /* 不产生自己的滚动条，让父容器处理滚动 */
  overflow-x: hidden !important;
  height: auto !important;
  max-height: none !important;
  display: flex !important; /* 确保使用 flex 布局 */
  flex-direction: column !important; /* 垂直方向布局 */
}

.two-col-content__placeholder {
  padding: 40px 20px;
  text-align: center;
  color: #999999;
  font-size: 14px;
}

/* ===== 侧边栏内容样式 ===== */
.two-col-sidebar__header {
  padding: 16px;
  border-bottom: 1px solid #E0E0E0;
  background: #FFFFFF;
}

.two-col-sidebar__title {
  font-size: 16px;
  font-weight: 600;
  color: #1A1A1A;
  margin: 0 0 4px 0;
}

.two-col-sidebar__subtitle {
  font-size: 12px;
  color: #666666;
  margin: 0;
}

.two-col-sidebar__body {
  flex: 1 1 auto;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 8px;
}

.two-col-sidebar__footer {
  padding: 12px;
  border-top: 1px solid #E0E0E0;
  background: #FAFAFA;
}

/* ===== 左侧栏菜单项样式修复 ===== */
/* 确保左侧栏菜单项不会显示黑底白字 */
.two-col-sidebar a,
.two-col-sidebar__body a,
.two-col-sidebar li a,
.two-col-sidebar .menu-item,
.two-col-sidebar .menu-item a {
  background: transparent !important;
  color: #333333 !important;
}

.two-col-sidebar a:hover,
.two-col-sidebar__body a:hover,
.two-col-sidebar li a:hover,
.two-col-sidebar .menu-item:hover,
.two-col-sidebar .menu-item a:hover {
  background: #F5F5F5 !important;
  color: #1A1A1A !important;
}

.two-col-sidebar a.active,
.two-col-sidebar__body a.active,
.two-col-sidebar li a.active,
.two-col-sidebar .menu-item.active,
.two-col-sidebar .menu-item.active a {
  background: #E8E8E8 !important;
  color: #1A1A1A !important;
}

/* 确保一级菜单项不会显示黑底白字 */
.two-col-sidebar .menu-item:first-child a,
.two-col-sidebar > ul > li > a,
.two-col-sidebar__body > ul > li > a {
  background: transparent !important;
  color: #333333 !important;
}

.two-col-sidebar .menu-item:first-child a:hover,
.two-col-sidebar > ul > li > a:hover,
.two-col-sidebar__body > ul > li > a:hover {
  background: #F5F5F5 !important;
  color: #1A1A1A !important;
}

.two-col-sidebar .menu-item:first-child a.active,
.two-col-sidebar > ul > li > a.active,
.two-col-sidebar__body > ul > li > a.active {
  background: #E8E8E8 !important;
  color: #1A1A1A !important;
}

/* ===== 响应式设计 ===== */
@media (max-width: 768px) {
  .two-col-sidebar {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .two-col-sidebar.is-open {
    transform: translateX(0);
  }
  
  .two-col-main {
    margin-left: 0 !important;
    width: 100%;
  }
  
  .two-col-overlay {
    position: fixed;
    top: 62px !important; /* 使用导航栏实际高度 62px */
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1019;
    display: none;
  }
  
  .two-col-overlay.is-visible {
    display: block;
  }
}

