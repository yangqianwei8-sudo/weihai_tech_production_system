/**
 * 表单组件样式
 * 维海科技信息化管理平台
 * 版本: 3.0
 */

/* ============================================
   表单输入文本颜色 - 根据样式模板统一方案规定
   所有表单输入元素的文本颜色统一设置为主题深蓝色 var(--vh-primary)
   ============================================ */
input:not([type="checkbox"]):not([type="radio"]):not([type="submit"]):not([type="button"]):not([type="reset"]),
select,
textarea {
    color: var(--vh-primary); /* 主题深蓝色 - 与系统主题保持一致 */
    font-size: var(--font-size-base);
    font-family: inherit;
    line-height: 1.5;
}

/* ============================================
   表单组件
   ============================================ */
.form-group {
    margin-bottom: var(--spacing-lg);
}

.form-label {
    font-weight: 500;
    color: var(--vh-text);
    margin-bottom: var(--spacing-sm);
    font-size: var(--font-size-base);
    display: block;
}

.form-label.required::after {
    content: " *";
    color: var(--vh-accent);
}

.form-control,
.form-select {
    border: 1px solid var(--vh-border);
    border-radius: var(--radius-md);
    padding: 10px 14px;
    font-size: var(--font-size-base);
    color: var(--vh-primary); /* 主题深蓝色 - 与系统主题保持一致 */
    transition: border-color var(--transition-base), box-shadow var(--transition-base), transform var(--transition-base);
    width: 100%;
    background: #fff;
}

.form-control:hover,
.form-select:hover {
    border-color: var(--vh-primary-muted);
}

.form-control:focus,


.form-control.is-valid {
    border-color: var(--vh-success);
}

.form-control.is-invalid {
    border-color: var(--vh-error);
}

/* readonly 和 disabled 字段也使用主题深蓝色 */
.form-control[readonly],
.form-control:disabled,
.form-select[readonly],
.form-select:disabled,
textarea[readonly],
textarea:disabled {
    color: var(--vh-primary);
    background-color: #f5f5f5;
    cursor: not-allowed;
}




.invalid-feedback {
    color: var(--vh-error);
    font-size: var(--font-size-sm);
    margin-top: var(--spacing-xs);
    display: block;
}

.form-text {
    color: var(--vh-text-muted);
    font-size: var(--font-size-sm);
    margin-top: var(--spacing-xs);
}

.form-row {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.form-row .form-group {
    flex: 1;
    min-width: 0;
}

.form-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: flex-end;
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--vh-border);
}

.input-group {
    display: flex;
    align-items: stretch;
}

.input-group-prepend,
.input-group-append {
    display: flex;
    align-items: center;
    padding: 10px 14px;
    background: var(--vh-surface);
    border: 1px solid var(--vh-border);
    border-radius: var(--radius-md);
    color: var(--vh-text-muted);
}

.input-group-prepend {
    border-right: none;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}

.input-group-append {
    border-left: none;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}

.input-group .form-control {
    border-radius: 0;
}

.input-group .form-control:first-child {
    border-top-left-radius: var(--radius-md);
    border-bottom-left-radius: var(--radius-md);
}

.input-group .form-control:last-child {
    border-top-right-radius: var(--radius-md);
    border-bottom-right-radius: var(--radius-md);
}

/* 响应式调整 */
@media (max-width: 576px) {
    .form-row {
        flex-direction: column;
    }
    
    .form-row .form-group {
        min-width: 100%;
    }
    
    .form-actions {
        flex-direction: column;
        gap: var(--spacing-sm);
    }
    
    .form-actions .btn {
        width: 100%;
    }
    
    .input-group {
        flex-direction: column;
    }
    
    .input-group-prepend,
    .input-group-append {
        border-radius: var(--radius-md);
        border: 1px solid var(--vh-border);
    }
    
    .input-group .form-control {
        border-radius: var(--radius-md);
    }
}
