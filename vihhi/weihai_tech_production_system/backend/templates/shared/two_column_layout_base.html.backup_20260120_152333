                {% block page_actions %}{% endblock page_actions %}
              </div>
            </div>
          {% endblock page_header %}

          {% block content_inner %}{% endblock content_inner %}
        </div>
      {% endblock content %}
    </main>
  </div>

  {% block base_scripts %}
    <!-- Bootstrap JS - 使用备用 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" onerror="this.onerror=null;this.src='https://unpkg.com/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'"></script>
  {% endblock base_scripts %}

